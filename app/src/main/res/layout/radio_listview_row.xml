<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/radio_playlist_listview_imageview"
            android:layout_width="80dp"
            android:layout_height="74dp" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:gravity="bottom"
                android:id="@+id/radio_playlist_listview_radioname_textview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10dp"
                android:layout_marginLeft="@dimen/_5dp"
                android:text="Kral Fm"
                />

            <TextView

                android:id="@+id/radio_playlist_listview_radiourl_textview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_17dp"
                android:layout_marginLeft="@dimen/_5dp"
                android:text="http://kral.com"
                />
        </LinearLayout>

            <ImageView
                android:layout_marginLeft="@dimen/_14dp"
                android:layout_marginTop="@dimen/_15dp"
                android:id="@+id/radio_playlist_listview_favori_add_imageview"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/palylis_add_favori_icon"/>





    </LinearLayout>






</LinearLayout>